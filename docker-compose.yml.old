version: '3.8'

services:
  web:
    build: .
    restart: unless-stopped
    # your web service config here...

  nginx:
    image: nginx:latest
    depends_on:
      - web
    ports:
      - "80:80"
      - "443:443"
    volumes:
      - ./nginx.conf:/etc/nginx/conf.d/default.conf
      - ./certbot_data/etc:/etc/letsencrypt
      - ./certbot_data/var:/var/www/certbot
    restart: unless-stopped

  certbot:
    image: certbot/certbot
    depends_on:
      - nginx
    volumes:
      - "./certbot_data/etc:/etc/letsencrypt"
      - "./certbot_data/var:/var/www/certbot"
    restart: unless-stopped  
    entrypoint: >
      sh -c "trap exit TERM; while :; do certbot renew; sleep 12h & wait $${!}; done"
